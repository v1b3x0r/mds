{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@v1b3x0r/mds-core": ["../../src/index.ts"],
      "@v1b3x0r/mds-core/*": ["../../src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "archive",
    "src/App.tsx",
    "src/components/**",
    "src/session/WorldSession.ts"
  ]
}
